{
	"name": "e2e-system-tests",
	"version": "1.0.0",
	"description": "e2e testing",
	"main": "index.js",
	"scripts": {
		"cy:run": "cypress run --browser chrome --headless",
		"cy:open": "cypress open",
		"pretest": "if exist cypress\\reports; then rmdir /S/Q cypress\\reports; fi;",
		"generate:report": "node cucumber-html-report.js",
		"posttest": "npm run cy:run || npm run generate:report",
		"tag:stable:tasks": "./node_modules/.bin/cypress-tags run --browser chrome  -e TAGS='@tasks'",
		"tag:stable:management": "./node_modules/.bin/cypress-tags run --browser chrome  -e TAGS='@management and @stable_test'",
		"tag:stable:courses": "./node_modules/.bin/cypress-tags run --browser chrome  -e TAGS='@courses and @stable_test'",
		"tag:stable:dashboard": "./node_modules/.bin/cypress-tags run --browser chrome  -e TAGS='@dashboard and @stable_test'",
		"tag:stable:help": "./node_modules/.bin/cypress-tags run --browser chrome  -e TAGS='@help and @stable_test'",
		"tag:stable:news": "./node_modules/.bin/cypress-tags run --browser chrome  -e TAGS='@news and @stable_test'",
		"tag:stable:account": "./node_modules/.bin/cypress-tags run --browser chrome  -e TAGS='@account and @stable_test'",
		"tag:stable:addons": "./node_modules/.bin/cypress-tags run --browser chrome  -e TAGS='@addons and @stable_test'",
		"tag:stable:login": "./node_modules/.bin/cypress-tags run --browser chrome  -e TAGS='@login and @stable_test'",
		"tag:stable:team": "./node_modules/.bin/cypress-tags run --browser chrome  -e TAGS='@team and @stable_test'",
		"tag:unstable": "./node_modules/.bin/cypress-tags run --browser chrome  -e TAGS='@unstable_test'",
		"tag:only": "./node_modules/.bin/cypress-tags run --browser chrome  -e TAGS='@only'"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/hpi-schul-cloud/e2e-system-tests.git"
	},
	"keywords": [
		"e2e"
	],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/hpi-schul-cloud/e2e-system-tests/issues"
	},
	"homepage": "https://github.com/hpi-schul-cloud/e2e-system-tests#readme",
	"devDependencies": {
		"cypress": "^9.6.0",
		"cypress-cucumber-preprocessor": "^4.3.1",
		"cypress-file-upload": "^5.0.8",
		"multiple-cucumber-html-reporter": "^1.21.4"
	},
	"cypress-cucumber-preprocessor": {
		"nonGlobalStepDefinitions": false,
		"stepDefinitions": "cypress/support/step_definition/",
		"cucumberJson": {
			"generate": true
		}
	}
}
