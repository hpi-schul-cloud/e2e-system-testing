{
	"name": "e2e-system-tests",
	"version": "1.0.0",
	"description": "e2e testing",
	"main": "index.js",
	"scripts": {
		"pretest": "if exist cypress\\reports; then rmdir /S/Q cypress\\reports; fi;",
		"generate:report": "node reporter.js",
		"posttest": "npm run cy:run || npm run generate:report",
		"cy:open:local": "cypress open -e tags='@stable_test',environmentName=local --browser chrome",
		"tag:stable:local": "xvfb-run cypress run --headed --browser chrome -e tags='@stable_test',environmentName=local",
		"tag:stable:pr:local": "cypress run --browser chrome -e tags='@pr and @stable_test',environmentName=local",
		"tag:stable:release:local": "cypress run --browser chrome -e tags='@release and @stable_test',environmentName=local",
		"tag:only:local": "cypress run --browser chrome -e tags='@only',environmentName=local",
		"cy:open:dev": "cypress open -e environmentName=dev --browser chrome",
		"tag:stable:dev": "xvfb-run cypress run --headed --browser chrome -e tags='@stable_test',environmentName=dev",
		"tag:stable:pr:dev": "cypress run --browser chrome -e tags='@pr and @stable_test',environmentName=dev",
		"tag:stable:release:dev": "cypress run --browser chrome -e tags='@release and @stable_test',environmentName=dev",
		"tag:only:dev": "cypress run --browser chrome -e tags='@only',environmentName=dev",
		"cy:open:staging": "cypress open -e environmentName=staging --browser chrome",
		"tag:stable:staging": "xvfb-run cypress run --headed --browser chrome -e tags='@stable_test',environmentName=staging",
		"tag:stable:pr:staging": "cypress run --browser chrome -e tags='@pr and @stable_test',environmentName=staging",
		"tag:stable:release:staging": "cypress run --browser chrome -e tags='@release and @stable_test',environmentName=staging",
		"tag:only:staging": "cypress run --browser chrome -e tags='@only',environmentName=staging",
		"tag:stable:ci": "xvfb-run cypress run --headed --browser chrome -e tags='@stable_test',environmentName=ci",
		"tag:stable:pr:ci": "cypress run --browser chrome -e tags='@pr and @stable_test',environmentName=ci",
		"tag:stable:release:ci": "cypress run --browser chrome -e tags='@release and @stable_test',environmentName=ci",
		"tag:only:ci": "cypress run --browser chrome -e tags='@only',environmentName=ci",
		"tag:unstable": "cypress run --browser chrome -e tags='@unstable_test'"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/hpi-schul-cloud/e2e-system-tests.git"
	},
	"keywords": [
		"e2e"
	],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/hpi-schul-cloud/e2e-system-tests/issues"
	},
	"homepage": "https://github.com/hpi-schul-cloud/e2e-system-tests#readme",
	"devDependencies": {
		"@badeball/cypress-cucumber-preprocessor": "^16.0.2",
		"@cypress/webpack-preprocessor": "^5.17.0",
		"cypress": "^12.8.0",
		"cypress-file-upload": "^5.0.8",
		"multiple-cucumber-html-reporter": "^1.21.4",
		"webpack": "^5.77.0"
	},
	"cypress-cucumber-preprocessor": {
		"stepDefinitions": "cypress/support/step_definition/**/*.js",
		"filterSpecs": true,
		"omitFiltered": true,
		"json": {
			"enabled": true,
			"output": "logs/json-report.json"
		},
		"messages": {
			"enabled": false,
			"output": "logs/messages.ndjson"
		},
		"html": {
			"enabled": false,
			"output": "html-report/report.html"
		}
	}
}
