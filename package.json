{
	"name": "e2e-system-tests",
	"version": "1.0.0",
	"description": "e2e testing",
	"main": "index.js",
	"scripts": {
		"check": "[[ -d cypress/reports ]] && echo 'Yes' ",
		"cy:run": "cypress run",
		"cy:open": "cypress open",
		"pretest": "[[ -d cypress/reports ]] && rm -rf cypress/reports",
		"merge": "mochawesome-merge cypress/reports/*.json -o cypress/reports/final_report.json",
		"generate_mochawesome_report": "marge cypress/reports/final_report.json --reportDir cypress/reports/ --inline",
		"final_report": "npm run merge && npm run generate_mochawesome_report",
		"trial": "npm run pretest && npm run cy:run || npm run final_report "
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/hpi-schul-cloud/e2e-system-tests.git"
	},
	"keywords": [
		"e2e"
	],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/hpi-schul-cloud/e2e-system-tests/issues"
	},
	"homepage": "https://github.com/hpi-schul-cloud/e2e-system-tests#readme",
	"devDependencies": {
		"cypress": "^9.6.0",
		"cypress-cucumber-preprocessor": "^4.3.1",
		"mochawesome": "^7.1.3",
		"mochawesome-merge": "^4.2.1",
		"mochawesome-report-generator": "^6.2.0"
	},
	"cypress-cucumber-preprocessor": {
		"nonGlobalStepDefinitions": false,
		"stepDefinitions": "cypress/support/step_definition/"
	}
}
