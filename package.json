{
	"name": "e2e-system-tests",
	"version": "1.0.0",
	"description": "e2e testing",
	"main": "index.js",
	"scripts": {
		"cy:run": "xvfb-run cypress run --headed --browser chrome",
		"cy:open": "cypress open",
		"pretest": "if exist cypress\\reports; then rmdir /S/Q cypress\\reports; fi;",
		"generate:report": "node reporter.js",
		"posttest": "npm run cy:run || npm run generate:report",
		"tag:stable": "cypress run --browser chrome -e tags='@stable_test'",
		"tag:stable:pr": "cypress run --browser chrome -e tags='@pr and @stable_test'",
		"tag:stable:release": "cypress run --browser chrome -e tags='@release and @stable_test'",
		"tag:unstable": "cypress run --browser chrome -e tags='@unstable_test'",
		"tag:only": "cypress run --browser chrome -e tags='@only'"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/hpi-schul-cloud/e2e-system-tests.git"
	},
	"keywords": [
		"e2e"
	],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/hpi-schul-cloud/e2e-system-tests/issues"
	},
	"homepage": "https://github.com/hpi-schul-cloud/e2e-system-tests#readme",
	"devDependencies": {
		"@badeball/cypress-cucumber-preprocessor": "^16.0.2",
		"@cypress/webpack-preprocessor": "^5.17.0",
		"cypress": "^12.8.0",
		"cypress-file-upload": "^5.0.8",
		"multiple-cucumber-html-reporter": "^1.21.4",
		"webpack": "^5.77.0"
	},
	"cypress-cucumber-preprocessor": {
		"stepDefinitions": "cypress/support/step_definition/**/*.js",
		"filterSpecs": true,
		"omitFiltered": true,
		"json": {
			"enabled": true,
			"output": "logs/json-report.json"
		},
		"messages": {
			"enabled": false,
			"output": "logs/messages.ndjson"
		},
		"html": {
			"enabled": false,
			"output": "html-report/report.html"
		}
	}
}
